<%= form_for(portfolio_item) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.file_field :main_image %>
  </div>

  <div class="form-group">
    <%= form.file_field :thumb_image %>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control' %>
  </div>

  <h2>Technologies Used</h2>
  <ul>
    <%= form.fields_for :technologies do |technology_form| %>
    <li>
      <%= technology_form.label :name %>
      <%= technology_form.text_field :name %>
    </li>
    <% end %>
  </ul>

  <div class="form-group">
    <%= form.submit 'Save Item', class: 'btn btn-primary btn-block' %>
  </div>
<% end %>
