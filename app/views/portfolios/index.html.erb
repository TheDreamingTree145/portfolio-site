<h1>Portfolio Index</h1>

<%= link_to "Create New Item", new_portfolio_path %>

<% @portfolio_items.each do |item| %>
  <h3><%=link_to item.title, item %></h3>
  <p><%= item.subtitle %></p>
  <p><%= item.body %></p>
  <p><%= image_tag item.thumb_image unless item.thumb_image.nil? %></p>
  <p><%= link_to "Edit Item", edit_portfolio_path(item)%></p>
<% end %>
