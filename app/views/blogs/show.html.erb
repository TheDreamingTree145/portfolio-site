<div class="col-md-8 blog-main">
  <h3 class="pb-3 mb-4 font-italic border-bottom">
    Dustin's Developer Musings
  </h3>

  <h2><%= @blog.title %></h2>

  <nav class="breadcrumb row">
    <div class="col">
      <%= link_to 'Home',root_path, class: 'breadcrumb-item' %>
      <%= link_to @blog.topic.title, @blog.topic, class: 'breadcrumb-item' %>
      <span class="breadcrumb-item breadcrumb-item-active"><%= @blog.title %></span>

      <span class='float-right'>
        <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
        <%= link_to fa_icon('trash'), @blog, method: :delete, data: { confirm: 'Are you sure you want to delete posts?' } if logged_in?(:site_admin) %>
      </span>
    </div>
  </nav>

  <p>
    <%= markdown @blog.body %>
  </p>

  <!-- Comment Form -->
  <%= render 'comments/comment_form' %>
  <!-- End of Comment Form -->

  <!-- Start of Comments -->
  <div id="comments" data-blog-id="<%= @blog.id %>">
    <%= render @blog.comments %>
  </div>
  <!-- End of Comments -->
</div>
